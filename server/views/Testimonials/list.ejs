<%- include('../layout/header'); %>
<%- include('../layout/sidebar'); %>

<main id="main" class="main">

    <div class="pagetitle">
      <h1><b>Testimonials</b></h1>
      <nav>
        
      </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
      <div class="d-flex justify-content-end">
        <a href="/testimonials/add"><button class="btn btn-success">Add</button></a>
        
    </div>
      <div class="row">

       

        <table class="table datatable">
            <thead>
             
              <tr>
                
                
                <th>Sr.no</th>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">Review Heading</th>
                <th scope="col">Review</th>
                <th scope="col">Profession</th>
                <th>Status</th>
                <th>Status Change</th>
                <th>Action</th>
              </tr>
              
              
            </thead>
            <tbody>
              <% var reversedData = data.slice().reverse(); %>
              <% var serial_no = 1%>
              <%reversedData.forEach(function(data){%>
              <tr>
                <td><%= serial_no%></td>
                <td><%= data.name%></td>
                <td><img src="../.././myUploads/Testimonials/<%= data.image%>" height="200px" width="300px" alt=""></td>
                <td><%- data.review_heading%></td>
                <td><%- data.review%></td>
                <th><%=data.profession%></th>
                <!-- <td><%= data.link%></td> -->
                <td><%= data.status%></td>

                <td><button onclick='updateStatus(`<%=data.id%>`, `<%=data.status%>`,`/testimonials/status-upd`)' class="btn btn-primary"><a href="/update-status/<%data.id%>"></a><%= data.status ? 'Deactivate' : 'Activate' %></button></td>
                <td><button class="btn" onclick="deleteRecord(`<%=data.id%>`, '/testimonials/delete')"><a href="#"><i class="bi bi-trash"></i></a></button><button class="btn"><a href="/testimonials/edit/<%=data.id%>"><i class="bi bi-pen"></i></a></button></td>
              </tr>
              <% serial_no++ %>
              <%})%>
            
            
            </tbody>
          </table>
       

      </div>
    </section>

  </main><!-- End #main -->

<%- include('../layout/footer'); %>


